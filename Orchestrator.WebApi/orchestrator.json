{
  "Services": {
    "BKGService": {
      "Name": "BKGService",
      "ExecutablePath": "C:/IMS/IMPService/IMS-Next.Import.dll",
      "WorkingDirectory": "C:/IMS/IMPService/",
      "Arguments": "--env=prod --queue=tasks",
      "MinInstances": 1,
      "MaxInstances": 1,
      "SchedulePolicy": {
        "Type": "demand",
        "Threshold": 75,
        "Cron": null
      },
      "Dependencies": [ "QueueListener" ]
    },
    "WorkerApp": {
      "Name": "WorkerApp",
      "ExecutablePath": "apps/WorkerApp.dll",
      "WorkingDirectory": "",
      "Arguments": "--env=prod --queue=tasks",
      "MinInstances": 1,
      "MaxInstances": 1,
      "SchedulePolicy": {
        "Type": "demand",
        "Threshold": 75,
        "Cron": null
      },
      "Dependencies": [ "QueueListener" ]
    },
    "QueueListener": {
      "Name": "QueueListener",
      "ExecutablePath": "apps/QueueListener.dll",
      "WorkingDirectory": "",
      "Arguments": "--env=prod",
      "MinInstances": 1,
      "MaxInstances": 1,
      "SchedulePolicy": {
        "Type": "steady",
        "Threshold": null,
        "Cron": null
      },
      "Dependencies": []
    }
  },
  "Global": {
    "LoggingLevel": "Info",
    "IpcTimeout": 5000,
    "HealthCheckInterval": 10000
  },
  "Scheduling": {
    "DefaultPolicy": "steady",
    "DemandThreshold": 80
  },
  "Web": {
    "UiPort": 5000,
    "ApiPort": 5001,
    "BindIP": "127.0.0.1",
    "StreamBufferSize": 8192
  },
  "Ipc": {
    "Host": "127.0.0.1",
    "LogPort": 6000,
    "StatusPort": 6001
  }
}
